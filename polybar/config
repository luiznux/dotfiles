format-underline            = #f90000
label                       = %percentage:2%%

[module/memory]
type                        = internal/memory
interval                    = 2
format-prefix               = "Ôî∏ "
format-prefix-foreground    = #325b91
format-underline            = #325b91
label                       = %percentage_used%%

[module/system-cpu-temppercore]
